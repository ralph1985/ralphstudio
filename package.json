{
  "name": "ralphstudio",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "^22.0.0 || ^20.10.0",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build:remotes": "./scripts/build-all-remotes.sh",
    "build": "pnpm -C apps/host build",
    "dev": "pnpm -C apps/host dev",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "lint:fix": "eslint . --fix",
    "lint": "eslint .",
    "prebuild": "pnpm run lint && pnpm run format:check && pnpm run typecheck && pnpm run test:unit",
    "prepare": "husky",
    "test:e2e": "echo 'todo: playwright' && exit 0",
    "test:unit": "echo 'todo: vitest' && exit 0",
    "typecheck": "tsc -p tsconfig.base.json --noEmit",
    "bugsnag:upload": "node scripts/upload-bugsnag-sourcemaps.mjs"
  },
  "dependencies": {
    "@bugsnag/js": "8.4.0"
  },
  "devDependencies": {
    "@bugsnag/source-maps": "2.3.3",
    "@eslint/js": "9.33.0",
    "@types/node": "24.3.0",
    "@typescript-eslint/eslint-plugin": "8.39.1",
    "@typescript-eslint/parser": "8.39.1",
    "eslint": "9.33.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-lit": "2.1.1",
    "eslint-plugin-lit-a11y": "5.1.1",
    "eslint-plugin-playwright": "2.2.2",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-unicorn": "60.0.0",
    "eslint-plugin-vitest": "0.5.4",
    "eslint-plugin-wc": "3.0.1",
    "husky": "9.1.7",
    "lint-staged": "16.1.5",
    "prettier": "3.6.2",
    "sass": "1.90.0",
    "typescript": "5.9.2",
    "typescript-eslint": "8.39.1",
    "vite": "5.4.19"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": "eslint --fix",
    "*.{ts,tsx,js,css,scss,md,json,yml,yaml}": "prettier --write"
  }
}
